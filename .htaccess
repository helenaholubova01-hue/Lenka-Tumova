# ==============================================================
# Bezpečnostní HTTP hlavičky
# ==============================================================

<IfModule mod_headers.c>
  # Ochrana před clickjackingem
  Header always set X-Frame-Options "SAMEORIGIN"

  # Ochrana před MIME sniffingem
  Header always set X-Content-Type-Options "nosniff"

  # Referrer Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"

  # Permissions Policy – omezení přístupu k funkcím prohlížeče
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

  # Content Security Policy
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self' https:; connect-src 'self' https://feeds.behold.so; frame-ancestors 'none';"

  # HTTPS Strict Transport Security (aktivovat až po nasazení SSL)
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# ==============================================================
# Chybová stránka 404
# ==============================================================
ErrorDocument 404 /404.html

# ==============================================================
# Komprese Gzip
# ==============================================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript text/xml application/xml
</IfModule>

# ==============================================================
# Cache pro statické soubory
# ==============================================================
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>
